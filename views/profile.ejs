<% include ./partials/header %>
<% include ./partials/profileNavbar %>

<% var awspath = "https://s3.us-east-2.amazonaws.com/user-image-aws-bucket/" %>
<% var defaultPath = "uploads/593c64707e790917b46bda1b1497439339142.jpg" %>

<div class="container mt-5">
  <div class="row">
      <div class="ui special cards mt-1">
          <%userPins.forEach(function(pin) {%>
            <div class="col-md-4">
                <div class="card mt-2">
                <div class="blurring dimmable image">
                  <div class="ui">
                  </div>
                  <%if(pin.image === null || pin.image === undefined) {%>
                    <img class="card-img" src="<%=awspath%><%=defaultPath%>" alt="pin image">
                  <%} else {%>
                    <img class="card-img" src="<%=awspath%><%=pin.image%>" alt="pin image">
                  <%}%>
                </div>
                <div class="card-block hoverable">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="pull-left">
                                  <div class="pull-left">
                                        <small><%=moment(pin.date).fromNow()%></small>
                                  </div>  
                            </div>
                        </div>
                        <div class="col-sm-6">
                           <div class="pull -right">
                               <form action="/pin/<%=pin._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger btn-sm">Delete</button>
                               </form>
                           </div> 
                        </div>
                    </div>
                </div> 
            </div>
            </div>
          <%})%>
  </div>
 </div>
</div>

<% include ./partials/footer %>